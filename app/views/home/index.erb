<%= stylesheet_link_tag "site" %>
<script>
  points = []
  <% @map.each do |r| %>
  points.push({"lat": <%=r["lat"]%>, 
               "long": <%= r["long"] %>,
               "title": "<%= r["title"] %>",
               "description": "<%= r["description"] %>"
             });
  <% end %>
</script>

<div id="map" style="width: 800px;height:500px;"></div>